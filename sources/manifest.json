{
    "manifest_version": 2,
    "name": "Backward From the Forward",
    "short_name": "BFTF",
    "version": "1.0.0",
    "description": "Replaces various forms of BDS with Evil Wolves, and Zionist with Pixie Elves",
    "permissions": ["storage"],
    "icons":
    {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
        "browser_action": {
        "default_popup": "control_panel.html"
    },
    "content_scripts":
    [
        {
            "matches": ["*://*/*"],
            "match_about_blank": true,
            "js":
            [
                "rules.js",
                "walk_text_nodes.js",
                "create_verb_converter.js",
                "browser_plugin.js",
                "content_script.js"
            ],
            "all_frames": true
        }
    ]
}
