{
    "manifest_version": 2,
    "name": "Disrupt to Bullshit",
    "short_name": "D2B",
    "version": "1.0.6",
    "description": "Replaces various forms of the word 'disrupt' with various forms of the word 'bullshit,' in every web page.",
    "permissions": ["storage"],
    "icons":
    {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
        "browser_action": {
        "default_popup": "control_panel.html"
    },
    "content_scripts":
    [
        {
            "matches": ["*://*/*"],
            "match_about_blank": true,
            "js":
            [
                "disrupt_to_bullshit_rules.js",
                "walk_text_nodes.js",
                "create_verb_converter.js",
                "content_script.js"
            ],
            "all_frames": true
        }
    ]
}
